extends layout

block content
  .container
    .row
      .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
        .bs-callout.bs-callout-primary
          h4 Choose your username and password
    .row
      .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
        if (typeof errors !== 'undefined' && errors.length >0)
          for error of errors
            div(class="alert alert-danger alert-dismissible" role="alert")
              button(type="button" class="close" data-dismiss="alert" aria-label="Close") &times;
                span= error
        form(method="post")
          .form-group
            label(for="username") Username
            input(type="text" class="form-control" id="username" name="username" placeholder="Username" required)
          .form-group
            label(for="password") Password
            input(type="password" class="form-control" id="password" name="password" required)
          .form-group
            label(for="confirmPassword") Confirm password
            input(type="password" class="form-control" id="confirmPassword" name="confirmPassword" required)
          button(type="submit" class="btn btn-primary") Continue
