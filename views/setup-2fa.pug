extends layout

block content
  .container
    .row
      .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
         .bs-callout.bs-callout-primary
            h4 Connect Google Authenticator to your Account
            p Scan QR code and press Save button.
    .row
      .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
        if (typeof errors !== 'undefined' && errors.length >0)
          for error of errors
            div(class="alert alert-danger alert-dismissible" role="alert")
              button(type="button" class="close" data-dismiss="alert" aria-label="Close") &times;
                span= error
        form(method="post")
          .form-group
            !=qr
            button(type="submit" class="btn btn-primary") Continue
