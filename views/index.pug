extends layout

block content
  .container
    .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      if (typeof errors !== 'undefined' && errors.length >0)
        for (error of errors)
          div(class="alert alert-danger alert-dismissible" role="alert")
            button(type="button" class="close" data-dismiss="alert" aria-label="Close") &times;
              span= error
      form(method="post")
        .form-group
          label(for="username") Username
          input(type="text" class="form-control" id="username" name="username" placeholder="Username" required)
        .form-group
          label(for="password") Password
          input(type="password" class="form-control" id="password" name="password")
        .form-group
          label(for="code") Google Authenticator Code
          input(type="code" class="form-control" id="code" name="code")
        .checkbox
          label
            input(type="checkbox" name="remember" value="1") Remember me
        .form-group
          a(href="/register") Create an account
          button(type="submit" class="btn btn-primary") Login
